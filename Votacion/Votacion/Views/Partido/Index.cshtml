@model IEnumerable<VotacionObjetos.ViewModels.PartidoViewModel>

@{
    ViewData["Title"] = "Lista de Partidos";
}

<h2>Lista de Partidos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Partido</a>
</p>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cantidad de Votos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.CantidadVotos</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
