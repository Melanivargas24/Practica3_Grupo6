@model VotacionObjetos.ViewModels.PartidoViewModel

@{
    ViewData["Title"] = "Eliminar Partido";
}

<h2>Eliminar Partido</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Cantidad de Votos</dt>
        <dd class="col-sm-9">@Model.CantidadVotos</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
