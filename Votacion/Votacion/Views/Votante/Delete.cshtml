@model VotacionObjetos.ViewModels.VotanteViewModel

@{
    ViewData["Title"] = "Eliminar Votante";
}

<h2>Eliminar Votante</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Cedula</dt>
        <dd class="col-sm-10">@Model.Cedula</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">
            @if (Model.FechaNacimiento.HasValue)
            {
                @Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                <span>No especificada</span>
            }
        </dd>

        <dt class="col-sm-2">Ya Voto</dt>
        <dd class="col-sm-10">
            @if (Model.SiVoto)
            {
                <span class="badge bg-success">Si</span>
            }
            else
            {
                <span class="badge bg-warning">No</span>
            }
        </dd>
    </dl>
</div>

@if (Model.SiVoto)
{
    <div class="alert alert-info">
        <strong>Nota:</strong> Este votante ya voto. Al eliminarlo tambien se eliminara su registro de voto
    </div>
}

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">Confirmar Eliminacion</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form> 